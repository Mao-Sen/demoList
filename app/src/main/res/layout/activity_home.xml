<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <Button
        android:id="@+id/main_choicemusicbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:text="我的歌曲" />

    <Button
        android:id="@+id/main_choicepicture_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/main_choicemusicbutton"
        android:layout_below="@+id/main_choicemusicbutton"
        android:layout_marginTop="36dp"
        android:text="我的照片" />

    <Button
        android:id="@+id/main_seting_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_choicepicture_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="94dp"
        android:text="设置" />

    <Button
        android:id="@+id/main_play_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/main_seting_button"
        android:layout_centerVertical="true"
        android:text="播放" />

</RelativeLayout>